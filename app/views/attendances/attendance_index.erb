<% provide(:title, "出勤中社員一覧") %>
<h1>出勤中社員一覧</h1>

<div class="row">
  <!-- 出勤社員一覧テーブル -->
  <table class="table table-bordered table-striped table-condensed">
    <!-- ヘッダー部分 -->
    <thead>
      <tr>
        <th>社員番号</th>
        <th>名前</th>
      </tr>
    </thead>
    
    <!-- データ部分 -->
    <tbody>
      <tr>
        <td>
          <% @users.each do |user| %>
            <% user.attendances.each do |attendance| %>
              <% if attendance.beginning_time != nil && attendance.leaving_time == nil %>
                <%= user.number %><br>
              <% end %>
            <% end %>
          <% end %>
        </td>
        <td>
          <% @users.each do |user| %>
            <% user.attendances.each do |attendance| %>
              <% if attendance.beginning_time != nil && attendance.leaving_time == nil %>
                <%= user.name %><br>
              <% end %>
            <% end %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
</div>




