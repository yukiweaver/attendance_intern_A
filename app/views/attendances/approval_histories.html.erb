<% provide(:title,  "勤怠ログ") %>
<h1>勤怠承認ログ</h1>

<button type="reset" class="btn btn-default clearForm" id="reset">リセット</button>

<div class="dropdown" id="year">
  <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" aria-expanded="false">年<b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu">
      <li id="2017"><a>2017</a></li>
      <li id="2018"><a>2018</a></li>
      <li id="2019"><a>2019</a></li>
    </ul>
    <input type="text" placeholder="2019" readonly="true" style="background-color: #EEE; width: 20%;">
</div>
<div class="dropdown" id="month">
  <a href="#" class="dropdown-toggle btn btn-default" data-toggle="dropdown" aria-expanded="false">月<b class="caret"></b></a>
    <ul class="dropdown-menu" role="menu">
      <li id="1"><a>1</a></li>
      <li id="2"><a>2</a></li>
      <li id="3"><a>3</a></li>
      <li id="4"><a>4</a></li>
      <li id="5"><a>5</a></li>
      <li id="6"><a>6</a></li>
      <li id="7"><a>7</a></li>
      <li id="8"><a>8</a></li>
      <li id="9"><a>9</a></li>
      <li id="10"><a>10</a></li>
      <li id="11"><a>11</a></li>
      <li id="12"><a>12</a></li>
    </ul>
    <input type="text" placeholder="5" readonly="true" style="background-color: #EEE; width: 20%;">
</div>
<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>日付</th>
      <th>変更前出社時間</th>
      <th>変更前退社時間</th>
      <th>変更後出社時間</th>
      <th>変更後退社時間</th>
      <th>指示者</th>
      <th>承認日</th>
    </tr>
  </thead>
  
  <tbody>
    <% @approval.each do |approval| %>
    <%# binding.pry %>
    <tr>
      <!-- 第一項：日付 -->
      <td><%= approval.attendance_day.month %>/<%= approval.attendance_day.day %></td>
      <!-- 第二項：変更前出社時間 -->
      <td>
        <% if approval.before_beginning_time %>
          <%= approval.before_beginning_time.hour %>:<%= approval.before_beginning_time.min %>
        <% end %>
      </td>
      <!-- 第三項：変更前退社時間 -->
      <td>
        <% if approval.before_leaving_time != nil %>
          <%= approval.before_leaving_time.hour %>:<%= approval.before_leaving_time.min %>
        <% end %>
      </td>
      <!-- 第四項：変更後出社時間 -->
      <td><%= approval.beginning_time.hour %>:<%= approval.beginning_time.min %></td>
      <!-- 第五項：変更後退社時間 -->
      <td><%= approval.leaving_time.hour %>:<%= approval.leaving_time.min %></td>
      <!-- 第六項：指示者確認 -->
      <td><%= User.find(approval.attendance_test).name %></td>
      <!-- 第七項：承認日 -->
      <td></td>
    </tr>
    <% end %>
  </tbody>
</table>

<script>
  $(function(){
    $("#year li").click(function(){
      var year = $(this).attr("id");
      $("#year input").val(year);
    });
    
    $("#month li").click(function(){
      var month = $(this).attr("id");
      $("#month input").val(month);
    });
  });
  
