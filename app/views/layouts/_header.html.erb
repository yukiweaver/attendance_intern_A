<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠システム", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "トップへ", user_path(current_user) %></li>
          <% if current_user.admin? %> <%# 勤怠：admin_userのみ表示 %>
            <li><%= link_to "ユーザー一覧", users_path %></li>
            <li><%= link_to "出勤社員一覧", "#" %></li>
            <li><%= link_to "拠点情報の修正", "#" %></li>
            <% if @user.present? %>
              <li><%= link_to "基本情報の修正", basic_info_path(@user) %></li>
            <% end %>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "アカウント情報", current_user %></li>
              <li><%= link_to "アカウント情報の更新", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>