<%# リスト 13.37: Homeページ (/) にマイクロポストの投稿フォームを追加 %>
<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <%# リスト 14.17: Homeページにフォロワーの統計情報を追加する %>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <%# リスト 13.49: Homeページにステータスフィードを追加 %>
    <div class="col-md-8">
      <h3>みんなの投稿</h3>
      <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>Welcom to the Weaver-Info</h1>

    <h2>
      〜WEAVERの最新情報を共有しよう〜
    </h2>

    <%= link_to "新規登録はこちら", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%#= link_to image_tag("rails.png", alt: "Rails logo"),
              'http://rubyonrails.org/' %>
<% end %>
